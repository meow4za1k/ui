-- Simple Animated Intro Script for Roblox
-- Place this in StarterGui or StarterPlayerScripts

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local SoundService = game:GetService("SoundService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Configuration
local INTRO_TEXT = "Saturn Library" -- Change this to your desired text
local LOGO_ASSET_ID = "rbxassetid://15861195995" -- Replace with your logo asset ID
local SWOOSH_IN_SOUND_ID = "rbxassetid://9119707271" -- Default swoosh sound (replace if needed)
local SWOOSH_OUT_SOUND_ID = "rbxassetid://131961136" -- Default swoosh sound (replace if needed)
local TOTAL_DURATION = 2.3 -- Total animation duration in seconds

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "IntroGui"
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true
screenGui.Parent = playerGui

-- Create logo
local logo = Instance.new("ImageLabel")
logo.Size = UDim2.new(0, 40, 0, 40)
logo.Position = UDim2.new(0.5, -105, 0.5, -20)
logo.BackgroundTransparency = 1
logo.Image = LOGO_ASSET_ID
logo.ImageTransparency = 1
logo.ScaleType = Enum.ScaleType.Fit
logo.Parent = screenGui

-- Create text label
local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(0, 400, 0, 40)
textLabel.Position = UDim2.new(0.5, -70, 0.5, -20)
textLabel.BackgroundTransparency = 1
textLabel.Text = ""
textLabel.TextColor3 = Color3.new(1, 1, 1)
textLabel.TextSize = 18
textLabel.Font = Enum.Font.FredokaOne
textLabel.TextTransparency = 0
textLabel.TextStrokeTransparency = 0.8
textLabel.TextStrokeColor3 = Color3.new(0, 0, 0)
textLabel.TextXAlignment = Enum.TextXAlignment.Left
textLabel.Parent = screenGui

-- Create sounds
local swooshInSound = Instance.new("Sound")
swooshInSound.SoundId = SWOOSH_IN_SOUND_ID
swooshInSound.Volume = 0.5
swooshInSound.Parent = screenGui

local swooshOutSound = Instance.new("Sound")
swooshOutSound.SoundId = SWOOSH_OUT_SOUND_ID
swooshOutSound.Volume = 0.5
swooshOutSound.Parent = screenGui

-- Typing animation
local function typeText(text, duration, callback)
    local typeSpeed = duration / #text
    local currentText = ""
    
    for i = 1, #text do
        currentText = string.sub(text, 1, i)
        textLabel.Text = currentText
        wait(typeSpeed)
    end
    
    if callback then
        callback()
    end
end

-- Animate in
local function animateIn()
    -- Random pitch variation so it sounds unique
    swooshInSound.PlaybackSpeed = math.random(95, 105) / 100
    swooshInSound:Play()
    
    local logoTweenInfo = TweenInfo.new(
        0.5,
        Enum.EasingStyle.Quart,
        Enum.EasingDirection.Out
    )
    
    local logoTween = TweenService:Create(logo, logoTweenInfo, {
        ImageTransparency = 0
    })
    logoTween:Play()
    
    wait(0.2)
    spawn(function()
        typeText(INTRO_TEXT, 0.6)
    end)
end

-- Animate out
local function animateOut()
    -- Random pitch variation again
    swooshOutSound.PlaybackSpeed = math.random(95, 105) / 100
    swooshOutSound:Play()
    
    local fadeOutTweenInfo = TweenInfo.new(
        0.5,
        Enum.EasingStyle.Quart,
        Enum.EasingDirection.In
    )
    
    local logoFadeOut = TweenService:Create(logo, fadeOutTweenInfo, {
        ImageTransparency = 1
    })
    
    local textFadeOut = TweenService:Create(textLabel, fadeOutTweenInfo, {
        TextTransparency = 1,
        TextStrokeTransparency = 1
    })
    
    logoFadeOut:Play()
    textFadeOut:Play()
    
    textFadeOut.Completed:Connect(function()
        screenGui:Destroy()
    end)
end

-- Sequence
local function startIntro()
    animateIn()
    wait(TOTAL_DURATION - 0.5) -- subtract fade out time
    animateOut()
end

-- Start
startIntro()
